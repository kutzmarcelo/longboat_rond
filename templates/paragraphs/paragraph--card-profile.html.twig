<div{{ attributes.addClass('team-section__card') }}>
  <div class="team-section__card__header">

    {% if content.field_card_profile_image %}
      <div class="team-section__card__image">
        {{ content.field_card_profile_image }}
      </div>
    {% endif %}
    
    <div class="team-section__card__info">
      {% if content.field_card_profile_name %}
        <h3 class="team-section__card__name">{{ content.field_card_profile_name }}</h3>
      {% endif %}

      {% if content.field_card_profile_role %}
        <div class="team-section__card__role">{{ content.field_card_profile_role }}</div>
      {% endif %}
    </div>

  </div>


  {% if content.field_card_profile_text %}
    <div class="team-section__card__text">
      {{ content.field_card_profile_text }}
    </div>
  {% endif %}

  <div class="team-section__card__socials">

    {% if content.field_card_profile_facebook %}
      <a 
        href="{{ content.field_card_profile_facebook.0['#url'] }}" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="team-section__card__social-link"
      >
        <svg width="33" height="33" viewBox="0 0 33 33" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0 16.592C0 24.795 5.958 31.617 13.75 33V21.083H9.625V16.5H13.75V12.833C13.75 8.708 16.408 6.417 20.167 6.417C21.358 6.417 22.642 6.6 23.833 6.783V11H21.725C19.708 11 19.25 12.008 19.25 13.292V16.5H23.65L22.917 21.083H19.25V33C27.042 31.617 33 24.797 33 16.592C33 7.466 25.575 0 16.5 0C7.425 0 0 7.466 0 16.592Z" fill="#3D445C"/>
        </svg>
      </a>
    {% endif %}

    {% if content.field_card_profile_linkedin %}
      <a 
        href="{{ content.field_card_profile_linkedin.0['#url'] }}" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="team-section__card__social-link"
      >
        <svg width="33" height="33" viewBox="0 0 33 33" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M16.5 0C7.387 0 0 7.387 0 16.5s7.387 16.5 16.5 16.5 16.5-7.387 16.5-16.5S25.613 0 16.5 0zm-4.039 23.339H9.12V12.586h3.341v10.753zm-1.691-12.073c-1.055 0-1.737-.748-1.737-1.672 0-.944.703-1.669 1.781-1.669 1.078 0 1.738.725 1.759 1.669 0 .924-.681 1.672-1.803 1.672zm14.894 12.073h-3.341V17.38c0-1.387-.485-2.329-1.693-2.329-.923 0-1.471.638-1.713 1.251-.089.219-.112.528-.112.836v6.199h-3.343V16.015c0-1.342-.043-2.464-.088-3.43h2.903l.153 1.494h.067c.44-.701 1.517-1.736 3.32-1.736 2.198 0 3.846 1.473 3.846 4.639v6.358z" fill="#3D445C"/>
